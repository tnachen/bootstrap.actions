#!/usr/bin/ruby

require 'rubygems'
require 'json'
require 'emr/common'

job_flow = Emr::JsonInfoFile.new('job-flow')
instance_info = Emr::JsonInfoFile.new('instance')
is_master = instance_info['isMaster'].to_s == 'true'
zookeeper = job_flow['masterPrivateDnsName']

run "mkdir -p /home/hadoop/drill"

File.open('/home/hadoop/drill/drill-override.conf', 'w') do |f|
  f.write(<<EOF
drill.exec: {
  cluster-id: "EMR-Drill"
  rpc: {
  	user.port : 31010,
  	bit.port : 32011
  },
  operator: {
    packages += "org.apache.drill.exec.physical.config"
  },
  optimizer: {
    implementation: "org.apache.drill.exec.opt.IdentityOptimizer"
  },
  storage: {
	packages += "org.apache.drill.exec.store"
  }
  metrics : {
  	context: "drillbit"
  },
  zk: {
	connect: "#{zookeeper}",
	root: "/drill",
	refresh: 500,
	timeout: 5000,
	retry: {
	  count: 7200,
	  delay: 500
	}
  }

  network: {
    start: 35000
  }
}

EOF
)
end

if is_master
   run "sudo apt-get -y install zookeeper expect"
end

run "cd /home/hadoop && curl -L --silent --show-error --fail --connect-timeout 30 --max-time 600 --retry 5 -O http://people.apache.org/~jacques/apache-drill-1.0.0-m1.rc3/apache-drill-1.0.0-m1-binary-release.tar.gz && tar xzf apache-drill-1.0.0-m1-binary-release.tar.gz"

run "mv apache-drill-1.0.0-m1 drill"
run "cp -f /home/hadoop/drill/drill-override.conf /home/hadoop/drill/conf/drill-override.conf"
run "mkdir -p /mnt/var/run/drill"
run "cp start_drill.sh /mnt/var/run/drill/run_drill"

File.open('/mnt/var/run/drill/run_drill', 'w') do |f|
  f.write(<<EOF
export DRILL_LOG_DIR=/home/hadoop/drill/drill_log
export DRILL_MAX_DIRECT_MEMORY=4096M
/home/hadoop/drill/bin/drillbit.sh start
EOF
)
end

# Download the drill.conf for BA
run "wget http://67.160.118.161:8000/drill.conf"
run "ln -sf drill.conf /etc/service-nanny/drill.conf"

